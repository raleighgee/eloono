<% if params[:type] == "change" %>
	<div class="alert alert-warning">You're about to categorize <img src="<%= @user.profile_image_url.to_s %>" height="33px" width="33px" /> as <strong><%= @category.name %></strong>.</div>
	<form class="form-horizontal" role="form" action="../assign_new_category/<%= @user.user_id %>/change" method="post">
		<input type="hidden" name="category_id" id="category_id" value="<%= @category.id %>" />
		<div class="form-group">
			<div class="col-sm-12">
				<button type="submit" class="btn btn-success btn-lg">Go!</button> | 
				<a href="../">Never mind</a>
			</div>
		</div>
	</form>
<% end %><!-- CHANGE -->


<% if params[:type] == "new" %>
	<div class="alert alert-success">Create a new category and put <img src="<%= @user.profile_image_url.to_s %>" height="33px" width="33px" /> <!-- <strong><%= @user.name.to_s %></strong>--> in it.</div>
	<form class="form-horizontal" role="form" action="../assign_new_category/<%= @user.user_id %>/new" method="post">
		<div class="form-group">
			<label for="category" class="col-sm-2 control-label">Category</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="category" name="category" placeholder="Enter a category name...">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-success btn-lg">Go!</button> | 
				<a href="../">Never mind</a>
			</div>
		</div>
	</form>

<% end %><!-- NEW -->


<% if params[:type] == "remove" %>
	<div class="alert alert-danger">You're about to <strong>uncategorize</strong> <img src="<%= @user.profile_image_url.to_s %>" height="33px" width="33px" />.</div>
	<form class="form-horizontal" role="form" action="../assign_new_category/<%= @user.user_id %>/remove" method="post">
		<div class="form-group">
			<div class="col-sm-12">
				<button type="submit" class="btn btn-success btn-lg">Go!</button> | 
				<a href="../">Never mind</a>
			</div>
		</div>
	</form>
<% end %><!-- REMOVE -->