<div class="row">
	<% if @friends.size > 0 %>
	<div class="col-xs-12" style="margin-bottom:20px; padding-bottom:20px;">
		<h1 catid="<%= @friends[0].category_name.to_s %>" style="-webkit-user-select: none;" numusers="<% numuser = User.count(:conditions => ["user_id <> ? and friend_flag = ? and count_tweets > ? and category_name = ?", 280795938, "yes", 0, @friends[0].category_name]) %><%= numuser.to_s %>"><a href="http://eloono.raleighgresham.com" style="text-decoration:none; color:#cccccc;"><i class="fa fa-refresh"></i></a> <span class="category_name" catid="<%= @friends[0].category_name.to_s %>"><%= @friends[0].category_name.to_s %></span></h1>
		<% for friend in @friends %>
			<div style="position:relative; display:inline-block; width:66px; height:66px; background:url('<%= friend.profile_image_url.to_s %>') no-repeat center; -webkit-user-select: none;" data-toggle="modal" data-target="#modal<%= friend.user_id.to_s %>" class="friend-profile-image" friendid="<%= friend.user_id.to_s %>" catid="<%= friend.category_name.to_s %>">
				<span class="badge tweet-counter" friendid="<%= friend.user_id.to_s %>" style="position:absolute; left:47px; bottom:3px; -webkit-user-select: none;""><%= friend.count_tweets.to_s %></span>
			</div>
			
			<div class="modal fade" role="dialog" tabindex="-1" id="modal<%= friend.user_id.to_s %>" aria-labelledby="myModalLabel" data-remote="http://eloono.raleighgresham.com/friend/<%= friend.user_id.to_s %>">
				<div class="modal-dialog">
					<div class="modal-content">
<div class="modal-header">
	<a class="hidden-md hidden-lg" href="twitter://user?screen_name=<%= friend.screen_name.to_s %>" target="_blank"><img src="<%= friend.profile_image_url.to_s %>" height="33px" width="33px" /><%= friend.name.to_s %></a>
	<a class="hidden-xs hidden-sm" href="http://twitter.com/<%= friend.screen_name.to_s %>" target="_blank"><img src="<%= friend.profile_image_url.to_s %>" height="33px" width="33px" /><%= friend.name.to_s %></a>
	<% if Follower.exists?(:user_id => friend.user_id) %> | <i class="fa fa-chain"></i><% end %>
	<% if friend.url != "" %> | <a href="<%= friend.url.to_s %>" target="_blank"><i class="fa fa-external-link-square"></i></a><% end %>
	<p style="text-align:center; padding-bottom:13px;"><em><%= friend.description.to_s %><% if friend.location != "" %></br><%= friend.location.to_s %><% end %></em></p>
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
</div>

<div class="modal-body">
	
</div>

<div class="modal-footer">
	<p style="text-align:left;">
		<% if friend.category_name != "Uncategorized" %>
			<a href="../friend_category?type=remove&friend=<%= friend.user_id %>"><i class="fa fa-minus-square"></i></a> | 
		<% end %>					
		<% for category in @categories %>
			<% unless category.name == friend.category_name %>
				<a href="../friend_category?type=change&friend=<%= friend.user_id %>&newcategory=<%= category.id.to_s %>"><%= category.name.to_s %></a> | 
			<% end %>
		<% end %>
		<a href="../friend_category?type=new&friend=<%= friend.user_id %>"><i class="fa fa-plus-square"></i></a>
	</p>
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
</div>	
					</div>					
				</div>	
			</div><!-- MODAL -->		
		<% end %>	
	</div>
	<% end %>
	<% if @showrectitle > 0 %>
	<% if @recs.size > 0 %>
		<% lastrec = 0 %>
		<div class="col-xs-12">
			<div class="panel panel-default"> <div class="panel-heading"><h3 class="panel-title">You Might Also Like These Folks</h3></div>
			<div class="panel-body">
			<% for rec in @recs %>
				<% unless Interaction.exists?(:user_id => rec.user_id, :status => "ignored") %>
					<% #unless rec.user_id == lastrec %>
						<% ftofratio = rec.user.followers_count.to_f/rec.user.friends_count.to_f
							ftofratio = ftofratio.round(2)
							tperday = rec.user.statuses_count.to_f/((((Time.now-rec.user.created_at)/60)/60)/24)
							tperday = tperday.round(2)
							recage = ((((Time.now-rec.user.created_at)/60)/60)/24)/365
							recage = recage.round(2)
							if recage < 1
								recagetext = "less than a year"
							else
								recagetext = recage.to_s+" years"
							end
							lasttweet = (((Time.now-rec.user.last_tweet_date)/60)/60)
							if lasttweet < 1
								lasttweet = (Time.now-rec.user.last_tweet_date)/60
								lasttweettext = lasttweet.round(0).to_s+" minutes ago"
							else
								lasttweettext = lasttweet.round(2).to_s+" hours ago"
							end
						%>
						<img class="rec_profile_img" recid="<%= rec.user_id.to_s %>" src="<%= rec.user.profile_image_url.to_s %>" data-toggle="modal" data-target="#modal-<%= rec.user_id.to_s %>" style="padding:9px;"/>
						<div class="modal fade" tabindex="-1" role="dialog" id="modal-<%= rec.user_id.to_s %>"><div class="modal-dialog"><div class="modal-content"><div class="modal-header"><a class="hidden-lg hidden-md" href="twitter://user?screen_name=<%= rec.user.screen_name.to_s %>" target="_blank"><img src="<%= rec.user.profile_image_url.to_s %>" height="33px" width="33px" /> <%= rec.user.name.to_s %></a><a class="hidden-xs hidden-sm" href="http://twitter.com/<%= rec.user.screen_name.to_s %>" target="_blank"><img src="<%= rec.user.profile_image_url.to_s %>" height="33px" width="33px" /> <%= rec.user.name.to_s %></a><% if rec.user.location != "" %> | <%= rec.user.location.to_s %><% end %><% if rec.user.url != "" %> | <a href="<%= rec.user.url.to_s %>" target="_blank"><i class="fa fa-external-link-square"></i></a><% end %></div><div class="modal-body"><p style="text-align:center; padding-bottom:13px;"><em><%= rec.user.description.to_s %></em></p><span style="width:50%; display:inline-block; text-align:center;"><a class="hidden-lg hidden-md" href="../rec_action/<%= rec.category_name.to_s %>/follow/<%= rec.id.to_s %>/direct" class="follow_rec_link" recid="<%= rec.user_id.to_s %>" target="_blank"><i class="fa fa-5x fa-twitter"></i></a><a class="hidden-xs hidden-sm" href="../rec_action/<%= rec.category_name.to_s %>/follow/<%= rec.id.to_s %>/web" class="follow_rec_link" recid="<%= rec.user_id.to_s %>" target="_blank"><i class="fa fa-5x fa-twitter"></i></a></span><span style="width:50%; display:inline-block; text-align:center; color:#7C2128;"><a href="../rec_action/<%= rec.category_name.to_s %>/ignore/<%= rec.id.to_s %>/na"><i class="fa fa-5x fa-minus-circle"></i></a></span></div><div class="modal-footer"><p style="font-size:0.85em; text-align:left;">For every person they follow, there are <%= ftofratio.to_s %> people that follow them. They have tweeted <%= rec.user.statuses_count.to_s.reverse.gsub(/...(?=.)/,'\&,').reverse.to_s %> times at a rate of <%= tperday.to_s %> tweets per day. They have been on Twitter for <%= recagetext.to_s %>. Their last tweet was <%= lasttweettext.to_s %>. They might fit best in the <em><%= rec.category_name.to_s %></em> category.</p><button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button></div></div></div></div>
					<% #end %>
					<% lastrec = rec.user_id %>
				<% end %>
			<% end %>
			</div></div>
		</div>
	<% end %>
	<% end %>
	<% if @uncats.size > 0 %>
		<div class="col-xs-12">
			<div class="panel panel-default"> <div class="panel-heading"><h3 class="panel-title">These Folks Need A Home</h3></div>
			<div class="panel-body">
			<% for uncat in @uncats %>
				<img class="profile-image" src="<%= uncat.profile_image_url.to_s %>" style="padding:9px;" data-toggle="modal" data-target="#modal-<%= uncat.user_id.to_s %>" />
				<div class="modal fade" tabindex="-1" role="dialog" id="modal-<%= uncat.user_id.to_s %>">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<a class="hidden-lg hidden-md" href="twitter://user?screen_name=<%= uncat.screen_name.to_s %>" target="_blank"><img src="<%= uncat.profile_image_url.to_s %>" height="33px" width="33px" />
								<a class="hidden-xs hidden-sm" href="http://twitter/com/<%= uncat.screen_name.to_s %>" target="_blank"><img src="<%= uncat.profile_image_url.to_s %>" height="33px" width="33px" /> 
								<%= uncat.name.to_s %></a>
								<% if Follower.exists?(:user_id => uncat.user_id) %> | <i class="fa fa-chain"></i><% end %>
								<% if uncat.url != "" %> | <a href="<%= uncat.url.to_s %>" target="_blank"><i class="fa fa-external-link-square"></i></a><% end %>
							</div>
							<div class="modal-body"><p style="text-align:center; padding-bottom:13px;"><em><%= uncat.description.to_s %><% if uncat.location != "" %></br><%= uncat.location.to_s %><% end %></em></p>
							</div>
							<div class="modal-footer">
								<p style="text-align:left;">
									<% for category in @categories %>
										<% unless category.name == uncat.category_name %>
											<a href="../friend_category?type=change&friend=<%= uncat.user_id %>&newcategory=<%= category.id.to_s %>"><%= category.name.to_s %></a> | 
										<% end %>
									<% end %>
									<a href="../friend_category?type=new&friend=<%= uncat.user_id %>"><i class="fa fa-plus-square"></i></a>
								</p>
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							</div>
						</div>
					</div>
				</div><!-- MODAL -->
			<% end %>
			</div></div>
		</div>
	<% end %>
</div>